    <TextView
        android:id="@+id/txtSurveyResultsQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="12pt"
        android:textColor="#000000"
