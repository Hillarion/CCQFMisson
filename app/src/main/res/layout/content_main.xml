<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.devel.ccqf.ccqfmisson.MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <Button
        android:layout_width="39pt"
        android:layout_height="37pt"
        android:id="@+id/docActivityBtn"
        android:layout_marginTop="116dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/doc_300px"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="39pt"
        android:layout_height="37pt"
        android:text=""
        android:id="@+id/feedActivityBtn"
        android:layout_alignTop="@id/docActivityBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:background="@drawable/chat_300px"/>

    <Button
        android:layout_width="39pt"
        android:layout_height="37pt"
        android:text=""
        android:id="@+id/programActivityBtn"
        android:layout_below="@id/docActivityBtn"
        android:layout_alignStart="@id/docActivityBtn"
        android:layout_marginTop="64dp"
        android:background="@drawable/program_closed"/>

    <Button
        android:layout_width="39pt"
        android:layout_height="37pt"
        android:text=""
        android:id="@+id/myAgendaActivityBtn"
        android:layout_alignBottom="@id/programActivityBtn"
        android:layout_alignEnd="@id/feedActivityBtn"
        android:background="@drawable/calendar_300px"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/imageButton"
        android:contentDescription=""
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dummy_banner"
        android:padding="0dp"
        android:layout_margin="0dp" />

</RelativeLayout>
