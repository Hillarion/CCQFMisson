<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.devel.ccqf.ccqfmisson.NewB2B">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtB2BDestinataire"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Destinataire"
        android:inputType="textEmailAddress" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure DÃ©but"
        android:id="@+id/btnB2bHeureDebut"
        android:layout_below="@+id/txtB2BDestinataire"
        android:layout_alignParentStart="true"
       />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure Fin"
        android:id="@+id/btnB2bHeureFin"
        android:layout_below="@+id/btnB2bHeureDebut"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnB2bHeureDebut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtB2bHeureDebut"
        android:textSize="12pt"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/btnB2bHeureDebut"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtB2bHeureFin"
        android:textSize="12pt"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/btnB2bHeureFin"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextB2bCompanie"
        android:layout_below="@+id/btnB2bHeureFin"
        android:layout_alignParentStart="true"
        android:hint="Companie"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextB2bCompanie"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextB2bNom"
        android:hint="Nom"
        android:padding="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextB2bPoste"
        android:hint="Poste"
        android:layout_below="@+id/editTextB2bNom"
        android:layout_alignParentStart="true"
        android:padding="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextB2bPhone"
        android:hint="Telephone"
        android:layout_below="@+id/editTextB2bPoste"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextB2bEmail"
        android:hint="Email"
        android:layout_below="@+id/editTextB2bPhone"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerBatiementExterieur"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/editTextB2bBatiment"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtB2BDestinataire"
        android:layout_alignEnd="@+id/txtB2BDestinataire" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/btnB2bOk"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextB2bBatiment"
        android:layout_below="@+id/editTextB2bEmail"
        android:layout_alignParentStart="true"
        android:hint="Batiment"
        android:paddingTop="10dp"/>

</RelativeLayout>
